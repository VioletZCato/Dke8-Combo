{
  "multipart": [
    { "when":
      { 
        "OR": [
          { "west": "false", "east": "false", "north": "false", "south": "false" },
          { "west": "true", "east": "true", "north": "true", "south": "true" },
          { "west": "false", "east": "true" },
          { "west": "true", "east": "false" },
          { "north": "false", "south": "true" },
          { "north": "true", "south": "false" }
        ]
      },
      "apply": { "model": "block/spruce_fence_post" }
    },
    
    { "when": { "north": "true", "south": "false" }, "apply": { "model": "block/spruce_fence_side", "uvlock": true } },
    { "when": { "east": "true", "west": "false" }, "apply": { "model": "block/spruce_fence_side", "y": 90, "uvlock": true } },
    { "when": { "south": "true", "north": "false" }, "apply": { "model": "block/spruce_fence_side", "y": 180, "uvlock": true } },
    { "when": { "west": "true", "east": "false" }, "apply": { "model": "block/spruce_fence_side", "y": 270, "uvlock": true } },
    
    { "when": { "north": "true", "south": "true" }, "apply": { "model": "block/spruce_fence_long", "uvlock": true } },
    { "when": { "east": "true", "west": "true" }, "apply": { "model": "block/spruce_fence_long", "y": 90, "uvlock": true } }
  ]
}